{# templates/home/all_products.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Les produits Wassa{% endblock%}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/products.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<div class="container">
		<div class="page-header" style="padding: 5px 0 5px 0; background-color: #F39C12;">
			<h3>Les meilleurs<small>de nos produits</small>
			</h3>
		</div>
		<div class="container" style="margin: auto;width: 100%;">
			{% for current_subList in allProducts %}
				<div class="row">
					{% for current_product in current_subList  %}
						<div class="col-md-4" style="padding:1px">
							<div style="display:inline-block; border:solid 1px #808080; padding:5px; width: 100%;">
								<div>
									<img class="img-responsive product-img" src="{{ asset('images/products/'~current_product.picture1) }}" alt="wassa-boutique-produit" }}" /><h4><a href=" #">{{ current_product.name }}</a>
							</h4>
							<br/>
							<h5 class="pull-right">Ã  partir de
								{% if current_product.price is not empty %}
									{{ current_product.price }}-fcfa
								{% else %}
									<a href="{{ path('wassa_contact') }}" style="text-decoration: none;" title="Demander le prix de ce produit.">&nbsp;&nbsp;
										<i class="fas fa-info"></i>&nbsp;<i class="fas fa-question"></i>
									</a>
								{% endif %}
							</h5>
							<br/>
							<p class="text-justify">
								{{ current_product.description }}
							</p>
						</div>
						<br/>
						<!--<div class="ratings text-center"><p><div id="rating1"></div>(10 reviews)</p></div><br /> -->
						<div class="btn-ground text-center" style="padding-bottom: 30px">
							<button type="button" class="btn btn-primary">
								<i class="fa fa-shopping-cart"></i>
								Add</button>
							{# <a class="btn btn-primary" href="{{ path('app_product_new') }}"><i class="fa fa-shopping-cart"></i>
															Add</a> #}
							 {# <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#productmodal1">
								<i class="fa fa-info"></i>
								Info</button>  #}
							 <a class="btn btn-primary"  href="{{ path('app_product_show', {'id': current_product.id}) }}">
								<i class="fa fa-info"></i>
								Info</a> 

						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endfor %}
</div></div>{% endblock %}
