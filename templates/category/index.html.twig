{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}

    <div style="width: 100%; margin: auto;">

    <h3>Liste des categoriee de Produit</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Color</th>
                <th>Picture1</th>
                <th>Picture2</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.color }}</td>
                <td>{{ category.picture1 }}</td>
                <td>{{ category.picture2 }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">voir</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">Modification</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Ajouter</a>
    </div>
{% endblock %}
