<form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Confirmez-vous la suppression de ce produit ?');">
	    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
	<button class="btn">
		<i class="fas fa-trash-alt"></i>
	</button>
</form>
