{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<div style="width: 60%;margin: auto; padding: 20px;">

		<h4>Détail Produit</h4>
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ product.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ product.name }}</td>
				</tr>
				<tr>
					<th>Prix</th>
					<td>{{ product.price }}</td>
				</tr>
				<tr>
					<th>Code</th>
					<td>{{ product.code }}</td>
				</tr>
				<tr>
					<th>Date d'ajout</th>
					<td>{{ product.addedDate ? product.addedDate|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Date mis à jour</th>
					<td>{{ product.updatedDate ? product.updatedDate|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Image 1</th>
					<td>
						{% if product.picture1 %}
							<img src="{{ asset('images/products/'~product.picture1) }}" style="width: 200px;height: 200px;" class='img-thumbnail' alt='image 1'/>
						{% endif %}
					</td>
				</tr>
				<tr>
					<th>Image 2</th>
					<td>
						{% if product.picture2 %}
							<img src="{{ asset('images/products/'~product.picture2) }}" style="width: 200px;height: 200px;" class='img-thumbnail' alt='image 2'/>
						{% endif %}
					</td>
				</tr>
				<tr>
					<th>Image 3</th>
					<td>
						{% if product.picture3 %}
							<img src="{{ asset('images/products/'~product.picture3) }}" style="width: 200px;height: 200px;" class='img-thumbnail' alt='image 3'/>
						{% endif %}
					</td>
				</tr>
				<tr>
					<th>Image 4</th>
					<td>
						{% if product.picture4 %}
							<img src="{{ asset('images/products/'~product.picture4) }}" style="width: 200px;height: 200px;" class='img-thumbnail' alt='image 4'/>
						{% endif %}
					</td>
				</tr>
				
			</tbody>
		</table>

		<a href="{{ path('app_product_index') }}">Retour</a>

		<a href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>

		{{ include('product/_delete_form.html.twig') }}

	</div>
{% endblock %}
